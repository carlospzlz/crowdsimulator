#!/bin/bash

fileName=parallelCrowd.txt

touch $fileName

echo "# File generated by parallelCrowd script" > $fileName
echo >> $fileName

xCentre=0
zCentre=0

flock=flock2
size=7

echo "0 0 0 1 2 1 8 parallelGoingRight parallelLeader 1 0 0" >> $fileName
echo "1" >> $fileName
echo "flock $flock" >> $fileName
echo >> $fileName

for ((i=0;i<$size;++i))
do
	for ((j=0;j<$size;++j))
	do
		rand=$(($RANDOM%100))
		mass=$(echo "scale=2; 0.5 + $rand / 100" | bc)
		rand=$(($RANDOM%100))
		maxStrength=$(echo "scale=2; 0.5 + $rand / 100" | bc)
		rand=$(($RANDOM%100))
		maxSpeed=$(echo "scale=2; 0.5 + $rand / 100" | bc)
		x=$(($xCentre1 - i))
		z=$(($zCentre1 + j))
		echo "$x 0 $z $mass $maxStrength $maxSpeed 4 state boid -1 0 0" >> $fileName
		echo "1" >> $fileName
		echo "flock $flock" >> $fileName
		echo >> $fileName
	done
done
